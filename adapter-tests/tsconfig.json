{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["es2021"],
    "module": "commonjs",
    "target": "es2021",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "dist",
    "types": ["jest"],
    "paths": {
      "*": [
        "./adapter-test/node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
  ]
}
