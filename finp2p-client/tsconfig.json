{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["es2021"],
    "module": "commonjs",
    "target": "es2021",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "dist",
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.graphql"
  ]
}
